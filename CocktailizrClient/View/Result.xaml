<UserControl x:Class="CocktailizrClient.View.Result"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="1280" d:DesignWidth="1024"
             DataContext="{Binding Main, Source={StaticResource Locator}}">
    <UserControl.Resources>
        <ResourceDictionary Source="../Themes/Generic.xaml"></ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/beach.jpg" Opacity="0.3"/>
        </Grid.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Label Content="Ergebnisse für Binding"></Label>
                <Label HorizontalAlignment="Center" Content="{Binding Cocktail.Name}" FontSize="{StaticResource HeadingFontSize}"></Label>
                <Image Source="{Binding Cocktail.Image}" HorizontalAlignment="Center" Height="500"></Image>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Margin="5" Style="{DynamicResource MaterialDesignFloatingActionButton}">
                        <Image Source="/Assets/ic_action_back.png"></Image>
                    </Button>
                    <Button Margin="5" Style="{DynamicResource MaterialDesignFloatingActionButton}">
                        <Image Source="/Assets/ic_action_forward.png"></Image>
                    </Button>
                </StackPanel>
                <Label Content="Zubereitung:"></Label>
                <Label Content="Binding für den Zubereirungs-Text blablablabla"></Label>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <Label Content="Benötigte Zutaten:"></Label>
                <Label Content="Binding für Zutaten"></Label>
            </StackPanel>

        </Grid>

    </Grid>
</UserControl>
