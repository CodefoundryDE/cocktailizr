<UserControl x:Class="CocktailizrClient.View.Search"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="1280" d:DesignWidth="1024">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="beach.jpg"/>
        </Grid.Background>
        <StackPanel VerticalAlignment="Bottom" Margin="0,200">
            <Label FontSize="39" Content="Cocktailizr" HorizontalAlignment="Center"  VerticalAlignment="Bottom"/>
            <TextBox HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" RenderTransformOrigin="0.156,-1.717"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Button Content="Suche" Width="100" Margin="5"/>
                <Button Content="Auf gut Glück!" Width="100" Margin="5"/>
            </StackPanel>
            <TextBlock HorizontalAlignment="Center">
                <Hyperlink>Erweiterte Suche</Hyperlink>
            </TextBlock>

        </StackPanel>




    </Grid>
</UserControl>
