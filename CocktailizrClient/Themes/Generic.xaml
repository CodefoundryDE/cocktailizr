    <!-- Loading-Animation -->
    <Style x:Key="LoadingGif" TargetType="Image">
        <Setter Property="gif:ImageBehavior.AnimatedSource" Value="../Assets/loading.gif" />
        <Setter Property="Stretch" Value="None" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <BlurEffect Radius="2" RenderingBias="Quality" KernelType="Gaussian" />
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>